<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Google fonts -->
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

		{% block stylesheets %}
			<!-- Bootstrap CSS -->
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

			<link rel="stylesheet" href="{{ asset('build/css/estilos.css') }}">
			<link rel="stylesheet" href="{{ asset('build/css/modales.css') }}">
		{% endblock %}

		<link rel="icon" href="{{ asset('build/img/LogoCR.JPG') }}">
		
		<title>{% block title %}Sostenibles{% endblock %}</title>
	</head>
    <body>
		<header>

			{% block cabecera %}

				<nav class="navbar navbar-expand-xl navbar-dark">
					<a class="navbar-brand" href="{{ path('index') }}">
						<img class="rounded mr-2 mr-xl-3" src="{{ asset('build/img/LogoCR.JPG') }}" width="50" alt="Logo sostenibles">
						SOStenibles
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="#">Compromiso ambiental</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('proyectos') }}">Apadrina</a>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="dropDownHowto" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Cómo funciona
								</a>

								<div class="dropdown-menu" aria-labelledby="dropDownHowto">
									<a class="dropdown-item link" href="#">Preguntas frecuentes</a>
									<a class="dropdown-item link" href="#">Beneficios fiscales</a>
								</div>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="dropDownPerfil" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Mi perfil
								</a>
								<div class="dropdown-menu" aria-labelledby="dropDownPerfil">
									<a class="dropdown-item link" href="{{ path('security_login') }}">Iniciar sesión</a>
									<a class="dropdown-item link" href="{{ path('user_registration') }}">Registrarse</a>
								</div>
							</li>

							<li class="nav-item active">
								<a class="nav-link" href="{{ path('contacto') }}">Contacto</a>
							</li>
						</ul>

						<form class="form-inline ml-auto" action="{{ path('proyectos') }}">
							<input class="form-control mr-sm-2" type="search" name="q" placeholder="Buscar proyectos" aria-label="Search" value="{% block criterio %}{% endblock %}">
							<button class="btn btn-light my-2 my-sm-0" type="submit">Buscar</button>
						</form>
					</div>
				</nav>

			{% endblock %}

		</header>
		
		<section class="container my-3">
			{% block cuerpo %}{% endblock %}
		</section>
		
		<footer class="d-flex justify-content-center flex-column flex-md-row">
            <div>SOStenibles<sup>&reg;</sup> - &nbsp;</div>
            <div>Todos los derechos reservados</div> 
        </footer>
		
		{% block modales %}{% endblock %}
        
        {% block javascripts %}
			<!-- Fonnt Awesome -->
			<script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>
			
			<!-- jQuery first, then Popper.js, then Bootstrap JS -->
			<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

		{% endblock %}
    </body>
</html>
